#include <bits/stdc++.h>
using namespace std;
int maxProfit(vector<int> &prices)
{
    int mini = prices[0];
    int profit = 0;
    int maxprofit = 0;
    for (int i = 1; i < prices.size(); i++)
    {
        profit = prices[i] - mini;
        maxprofit = max(profit, maxprofit);
        mini = min(mini, prices[i]);
    }
    return maxprofit;
}
int main()
{
    int n;
    cin >> n;
    vector<int> arr1(n);
    // vector<int> arr2(n);
    for (int i = 0; i < n; i++)
    {
        cin >> arr1[i];
    }
    // int k;
    // cin >> k;
    int ans = maxProfit(arr1);
    cout << ans << endl;
    // for (int i = 0; i < n; i++)
    // {
    //     cout << arr1[i] << " ";
    // }

    return 0;
}
