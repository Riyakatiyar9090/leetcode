#include <bits/stdc++.h>
using namespace std;
int longestConsecutive(vector<int> &nums)
{
    unordered_set<int> s;
    for (int i = 0; i < nums.size(); i++)
    {
        s.insert(nums[i]);
    }

    int maxi = 0;
    for (auto x : s)
    {
        int cnt = 1;
        if (s.find(x - 1) == s.end())
        {
            while (s.find(x + 1) != s.end())
            {
                cnt++;
                x = x + 1;
            }
        }
        maxi = max(maxi, cnt);
    }
    return maxi;
}
int main()
{
    int n;
    cin >> n;
    vector<int> arr1(n);
    // vector<int> arr2(n);
    for (int i = 0; i < n; i++)
    {
        cin >> arr1[i];
    }
    // int k;
    // cin >> k;
    int ans = longestConsecutive(arr1);
    cout << ans << endl;
    // for (int i = 0; i < ans.size(); i++)
    // {
    //     cout << ans[i] << " ";
    // }
    return 0;
}
