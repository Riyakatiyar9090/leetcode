class Solution {
public:
    void inorder(TreeNode* root,vector<int>& ans){
        if(!root) return;
        inorder(root->left,ans);
        ans.push_back(root->val);
        inorder(root->right,ans);
    }
    bool findTarget(TreeNode* root, int k) {
        if(!root) return false;
        vector<int> ans;
        inorder(root,ans);
        int i=0;
        int j=ans.size()-1;
        while(i<j){
            if(ans[i]+ans[j]==k){
                return true;
            }
            else if(ans[i]+ans[j]<k){
                i++;
            }
            else{
                j--;
            }
        }
        return false;
    }
};
