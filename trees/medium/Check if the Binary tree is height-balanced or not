class Solution {
public:
    int validheight(TreeNode* root){
        if(!root) return 0;
        int left=validheight(root->left);
        if(left==-1) return -1;
        int right=validheight(root->right);
        if(right==-1) return -1;
        int diff=abs(left-right);
        if(diff>1) return -1;
        return 1+max(left,right);
    }
    bool isBalanced(TreeNode* root) {
        if(!root) return true;
        return validheight(root)!=-1;

    }
};
